{
	"name": "@witchcraft/nuxt-android",
	"description": "Nuxt module for working with android (capacitor).",
	"version": "0.0.5",
	"repository": "witchcraftjs/nuxt-android",
	"license": "MIT",
	"type": "module",
	"sideEffects": false,
	"exports": {
		".": {
			"types": "./dist/types.d.mts",
			"import": "./dist/module.mjs"
		},
		"./android": {
			"types": "./dist/runtime/android/index.d.ts",
			"import": "./dist/runtime/android/index.js"
		},
		"./capacitor": {
			"require": "./src/defineCapacitorConfig.cjs",
			"types": "./src/defineCapacitorConfig.d.ts"
		}
	},
	"@comments": {
		"exports": {
			"./capacitor": "This is a special case because capacitor requires as cjs. Types are also hand written."
		}
	},
	"files": [
		"src",
		"dist"
	],
	"scripts": {
		"prepare": "husky && pnpm build",
		"build": "nuxt-module-build prepare && nuxt-module-build build && nuxi build playground",
		"build:only": "nuxt-module-build build",
		"dev": "nuxi dev playground",
		"dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
		"lint": "eslint \"{src,test,playground/app}/**/*.{ts,vue}\" \"*.{js,cjs,mjs,ts}\"",
		"lint:types": "vue-tsc --noEmit && cd playground && vue-tsc --noEmit",
		"test": "echo no tests yet",
		"test:watch": "vitest watch"
	},
	"peerDependencies": {
		"@capacitor/android": "catalog:",
		"@capacitor/app": "catalog:",
		"@capacitor/core": "catalog:"
	},
	"dependencies": {
		"@alanscodelog/utils": "catalog:",
		"@capacitor/android": "catalog:",
		"@capacitor/app": "catalog:",
		"@capacitor/core": "catalog:",
		"@nuxt/kit": "catalog:",
		"@witchcraft/nuxt-utils": "catalog:",
		"defu": "catalog:"
	},
	"devDependencies": {
		"@alanscodelog/eslint-config": "catalog:",
		"@alanscodelog/semantic-release-config": "catalog:",
		"@alanscodelog/tsconfigs": "catalog:",
		"@capacitor/cli": "catalog:",
		"@nuxt/eslint-config": "catalog:",
		"@nuxt/module-builder": "catalog:",
		"@nuxt/schema": "catalog:",
		"@nuxt/test-utils": "catalog:",
		"@types/node": "latest",
		"changelogen": "catalog:",
		"eslint": "catalog:",
		"husky": "catalog:",
		"nuxt": "catalog:",
		"typescript": "catalog:",
		"vitest": "catalog:",
		"vue-tsc": "catalog:"
	},
	"release": {
		"extends": [
			"@alanscodelog/semantic-release-config"
		]
	},
	"commitlint": {
		"extends": [
			"@alanscodelog"
		]
	},
	"publishConfig": {
		"access": "public"
	}
}
